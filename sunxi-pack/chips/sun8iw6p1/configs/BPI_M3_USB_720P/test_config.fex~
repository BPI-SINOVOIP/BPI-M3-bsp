;-------------------------------------------------------------------------------
; sound_file
;   The full path of sound file.
; samplerate
;   The samplerate of sound file.
; support_mode
;   0 : 480I    
;   1 : 576I    
;   2 : 480P    
;   3 : 576P    
;   4 : 720P 50HZ
;   5 : 720P 60HZ
;   6 : 1080I 50HZ
;   7 : 1080I 60HZ
;   8 : 1080P 24HZ
;   9 : 1080P 50HZ
;   10: 1080P 60HZ
;-------------------------------------------------------------------------------
[hdmi]
display_name= "HDMI"
activated   = 0
program     = "hdmitester.sh"
category    = 1
run_type    = 1
sound_file  = "/dragonboard/data/test48000.pcm"
samplerate  = 48000
support_mode= 2
module_count= 1
module1_path= "/system/vendor/modules/hdcp.ko"
